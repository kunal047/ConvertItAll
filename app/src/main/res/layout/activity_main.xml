<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:layout_margin="15dp">


    <TextView
        android:id="@+id/octal_to_binary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="@string/octal_to_binary"
        android:textColor="@color/click_effect"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/hex_to_binary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:id="@+id/hex_to_binary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="@string/hex_to_binary"
        android:textColor="@color/click_effect"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/dec_to_binary"
        app:layout_constraintLeft_toLeftOf="@+id/octal_to_binary"
        app:layout_constraintRight_toRightOf="@+id/octal_to_binary"/>

    <TextView
        android:id="@+id/dec_to_binary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="@string/dec_to_binary"
        android:textColor="@color/click_effect"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/mix_it_up"
        app:layout_constraintLeft_toLeftOf="@+id/hex_to_binary"
        app:layout_constraintRight_toRightOf="@+id/hex_to_binary"/>

    <TextView
        android:id="@+id/mix_it_up"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="Mix It Up"
        android:textColor="@color/click_effect"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/dec_to_binary"
        app:layout_constraintRight_toRightOf="@+id/dec_to_binary"
        />


</android.support.constraint.ConstraintLayout>